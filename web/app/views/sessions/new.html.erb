<div class="max-w-md mx-auto px-4 my-16">
  <div class="mb-4 pb-6 border-b">
    <nav aria-label="breadcrumb" class="my-6 font-medium flex text-slate-500 dark:text-slate-200 text-sm">
      <ol class="flex flex-wrap items-center space-x-3">
        <li>
          <%= link_to "PÃ¡gina Inicial", root_path, class: "hover:underline hover:text-slate-600 dark:hover:text-slate-400" %>
        </li>
        <li class="flex space-x-3">
          <div class="flex items-center">
            <span class="text-slate-300 dark:text-slate-500">/</span>
          </div>
          <span class="text-primary-600 dark:text-primary-500" aria-current="page">Login</span>
        </li>
      </ol>
    </nav>
    <h1 class="text-4xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight">Login</h1>
  </div>

  <%= form_with(url: login_path, method: :post, local: true, class: "space-y-6") do |form| %>
    <% if flash[:error] %>
      <div class="text-red-600">
        <h2><%= flash[:error] %></h2>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email, class: "form-label text-lg font-semibold" %>
      <%= form.text_field :email, class: "form-input w-full px-4 py-2 border rounded-lg", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "form-label text-lg font-semibold" %>
      <%= form.password_field :password, class: "form-input w-full px-4 py-2 border rounded-lg", required: true %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Login", class: "btn btn-primary px-6 py-2 rounded-lg text-white bg-blue-500 hover:bg-blue-600" %>
      <%= link_to "Esqueceu a senha?", "#", class: "text-sm text-blue-500 hover:underline" %>
    </div>
  <% end %>
</div>
