<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="mb-4 pb-6 border-b">
    <nav aria-label="breadcrumb" class="my-6 font-medium flex text-slate-500 dark:text-slate-200 text-sm">
      <ol class="flex flex-wrap items-center space-x-3">
        <li>
          <%= link_to "Tarefas", tasks_path, class: "hover:underline hover:text-slate-600 dark:hover:text-slate-400" %>
        </li>
        <li class="flex space-x-3">
          <div class="flex items-center">
            <span class="text-slate-300 dark:text-slate-500">/</span>
          </div>
          <span class="text-primary-600 dark:text-primary-500" aria-current="page">Editar Tarefa</span>
        </li>
      </ol>
    </nav>
    <div class="flex items-center justify-between">
      <h1 class="text-4xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight">Editar Tarefa</h1>
      <%= button_to "Excluir", @task, method: :delete, class: "btn btn-light", form: { data: { turbo_confirm: "Tem certeza que deseja excluir?" } } %>
    </div>
  </div>

  <div>
    <%= render "form", task: @task %>
  </div>
</div>
