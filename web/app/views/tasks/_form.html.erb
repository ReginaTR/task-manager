<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :Título, class: "form-label" %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :url, class: "form-label" %>
    <%= form.text_field :url, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, options_for_select(
  [["Pendente", "pendente"], ["Em Progresso", "em_progresso"], ["Concluída", "concluida"], ["Falha", "falha"]],
  selected: form.object.status
), {}, class: "form-select" %>
  </div>

  <div class="form-group">
    <%= form.label :Descrição, class: "form-label" %>
    <%= form.text_area :description, class: "form-input" %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit "Criar Tarefa", class: "btn btn-primary" %>
    </div>
    <% if form.object.new_record? %>
      <%= link_to "Cancelar", tasks_path, class: "btn btn-light" %>
    <% else %>
      <%= link_to "Cancelar", task_path(form), class: "btn btn-light" %>
    <% end %>
  </div>

<% end %>
